{% extends 'emails/base_email.html.twig' %}

{% block body %}
	<div class="header" style="text-align: center; padding-bottom: 20px; border-bottom: 1px solid #eee;">
		<h2 style="color: #ffffffff; margin: 0;">{{ title }}</h2>
		<p style="color: #fefbfbff; margin-top: 5px;">Action Requise</p>
	</div>

	<div class="content" style="padding: 20px 0;">
		<p style="font-size: 16px; line-height: 1.6; color: #333;">
			Bonjour,
		</p>

		<div style="background-color: #fff7ed; border-left: 4px solid #d97706; padding: 15px; margin: 20px 0; border-radius: 4px;">
			<p style="margin: 0; color: #9a3412; font-weight: bold;">
				{{ message|nl2br }}
			</p>
		</div>

		{% if centre is defined %}
			<div style="background-color: #f8fafc; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
				<h3 style="margin-top: 0; color: #1e293b; font-size: 14px; text-transform: uppercase;">Détails du Centre</h3>
				<ul style="list-style: none; padding: 0; margin: 0; color: #475569; font-size: 14px;">
					<li style="margin-bottom: 5px;">
						<strong>Nom :</strong>
						{{ centre.nom }}</li>
					<li style="margin-bottom: 5px;">
						<strong>Code :</strong>
						{{ centre.code }}</li>
					<li style="margin-bottom: 5px;">
						<strong>Arrondissement :</strong>
						{{ centre.arrondissement }}</li>
					<li style="margin-bottom: 5px;">
						<strong>Commune :</strong>
						{{ centre.commune }}</li>
				</ul>
			</div>
		{% endif %}

		<p style="color: #666;">
			Veuillez vous connecter à l'interface d'administration pour vérifier et ajuster la configuration des bureaux de vote de ce centre si nécessaire.
		</p>

		<div style="text-align: center; margin-top: 30px;">
			<a href="{{ actionUrl }}" style="background-color: #1e293b; color: white; padding: 12px 25px; text-decoration: none; border-radius: 6px; font-weight: bold; display: inline-block;">
				Accéder à l'Administration
			</a>
		</div>
	</div>
{% endblock %}
