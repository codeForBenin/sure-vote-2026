{% extends 'base.html.twig' %}

{% block title %}Journal des Observations
{% endblock %}
{% block flash_messages %}{% endblock %}



{% block body %}
<div
	class="min-h-screen bg-slate-900 pb-20">
	<!-- Header -->
	<header class="bg-black/20 backdrop-blur-lg border-b border-white/5 sticky top-0 z-50">
		<div class="px-6 py-4 flex justify-between items-center container mx-auto max-w-lg">
			<a href="{{ path('app_assesseur_dashboard') }}" class="flex items-center gap-2 text-white/80 hover:text-white transition-colors">
				<div class="p-2 bg-white/10 rounded-xl">

<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewbox="0 0 20 20" fill="currentColor">
	<path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
</svg></div><span class="font-bold">Retour</span></a><div class="text-right">

<div class="text-xs font-bold text-benin-yellow uppercase tracking-wider">
	{% if centre %}Centre de Vote{% else %}Bureau
	{% endif %}
</div>
<div class="text-white font-black text-lg leading-none">
	{% if centre %}
		<span class="text-sm block truncate max-w-[150px]">{{ centre.nom }}</span>
	{% else %}
		{{ bureau.code }}
	{% endif %}
</div></div></div></header>


<main class="px-6 py-8 container mx-auto max-w-lg">



<!-- Formulaire -->
<div class="bg-white rounded-[2rem] p-8 shadow-2xl shadow-black/50 mb-10 relative overflow-hidden">
	<div class="absolute top-0 right-0 p-6 opacity-5">

<svg xmlns="http://www.w3.org/2000/svg" class="h-32 w-32" viewbox="0 0 20 20" fill="currentColor">
	<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
</svg></div>


<div class="relative">
	<h2 class="text-2xl font-black text-slate-900 mb-2">Nouvelle Observation</h2>
	<p class="text-slate-500 text-sm mb-6">Signalez un incident, un manque de matériel ou toute remarque pertinente.</p>


{{ form_start(form) }}
<div class="mb-6">
	{{ form_row(form.niveau, {'attr': {'class': 'flex gap-4'}}) }}
</div>

<div class="mb-6">
	{{ form_widget(form.contenu) }}
</div>

<div class="mb-6">
	{{ form_widget(form.imageFile) }}
	{{ form_errors(form.imageFile) }}
</div>



<button type="submit" class="w-full bg-slate-900 text-white font-black py-4 rounded-xl hover:bg-slate-800 transition-all hover:scale-[1.02] shadow-lg shadow-slate-900/20 flex items-center justify-center gap-2">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewbox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"/>
    </svg>
    Enregistrer l'observation
</button>
<div class="text-center mt-3 text-xs text-slate-400">Horodaté automatiquement</div>
{{ form_end(form) }}
</div></div>


<!-- Historique -->
<div class="space-y-4">
	<h3 class="text-white/60 font-bold uppercase text-sm tracking-wider pl-4 mb-4 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewbox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
        </svg>
        Historique {% if centre %}du centre{% else %}du bureau{% endif %}
    </h3>

    {% for obs in historique %}
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-colors">
            <div class="flex justify-between items-start mb-3">
                <div class="flex items-center gap-3">
                    <div class="h-8 w-8 rounded-full bg-slate-800 flex items-center justify-center text-xs font-bold text-white">
                        {{ obs.assesseur.prenom|first }}{{ obs.assesseur.nom|first }}
                    </div>
                    <div>
                        <div class="text-white font-bold text-sm">{{ obs.assesseur.prenom }} {{ obs.assesseur.nom }}</div>
                        <div class="text-white/40 text-xs">{{ obs.createdAt|date('H:i') }}</div>
                    </div>
                </div>
                {% if obs.niveau == 'URGENT' %}
                    <span class="bg-red-500/20 text-red-400 text-[10px] font-black uppercase px-2 py-1 rounded-lg border border-red-500/20">Urgent</span>
                {% else %}
                    <span class="bg-blue-500/20 text-blue-300 text-[10px] font-black uppercase px-2 py-1 rounded-lg border border-blue-500/20">Info</span>
                {% endif %}
            </div>
            
            <p class="text-white/90 text-sm leading-relaxed pl-11">{{ obs.contenu|nl2br }}</p>

            {% if obs.imageName %}
                <div class="pl-11 mt-4">
                    <a href="{{ vich_uploader_asset(obs, 'imageFile') }}" target="_blank" class="block relative group w-fit">
                        <img src="{{ vich_uploader_asset(obs, 'imageFile') }}" alt="Preuve" class="h-32 w-auto object-cover rounded-lg border border-white/20 shadow-lg">
                    </a>
                </div>
            {% endif %}
        </div>
    {% else %}
        <div class="text-center py-12 text-white/30 italic">Aucune observation enregistrée pour le moment.</div>
    {% endfor %}
</div></main></div>


{% endblock %}
