{% extends 'base.html.twig' %}

{% block title %}Test Connexion Azure{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12 max-w-4xl">
    <div class="bg-white rounded-2xl shadow-lg border border-slate-100 overflow-hidden">
        <div class="p-8 border-b border-slate-100 flex items-center justify-between">
            <h1 class="text-2xl font-bold text-slate-900 flex items-center gap-3">
                <i class="fas fa-cloud-upload-alt text-blue-500"></i>
                Test Azure Blob Storage
            </h1>
{% if status == 'SUCCÈS' or status == 'TOUT OK' %}
	<span class="px-4 py-2 bg-green-100 text-green-700 font-bold rounded-full">{{ status }}</span>

{% else %}

<span class="px-4 py-2 bg-red-100 text-red-700 font-bold rounded-full">{{ status }}</span>{% endif %}

        </div>
        
        <div class="p-8 bg-slate-50 font-mono text-sm space-y-2">
            {% for line in report %}
                {% if '❌' in line %}
                    <div class="text-red-600 font-bold border-l-4 border-red-500 pl-3 py-1 bg-red-50">{{ line|nl2br }}</div>
                {% elseif '✅' in line %}
                    <div class="text-green-600 border-l-4 border-green-500 pl-3 bg-green-50">{{ line }}</div>
                {% else %}
                    <div class="text-slate-600">{{ line }}</div>
                {% endif %}
            {% endfor %}
        </div>

        <div class="p-4 bg-slate-100 text-center">
            <a href="{{ path('admin_system_logs') }}" class="text-blue-600 hover:underline font-bold">Voir les logs complets</a>
        </div>
    </div>
</div>
<ul>
	{% for env in envs %}
		<li>{{ env.key }}:
			{{ env.value }}</li>
	{% endfor %}
</ul>


{% endblock %}
